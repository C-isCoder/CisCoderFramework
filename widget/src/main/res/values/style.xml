<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ========================== 通用样式 ============================ -->

    <!-- topBar -->
    <dimen name="topBar_height">50dp</dimen>
    <dimen name="topBar_left_padding">16dp</dimen>
    <dimen name="topBar_title_padding">72dp</dimen>

    <dimen name="button_text_size">16sp</dimen>
    <dimen name="expand_tab_item_height">45dp</dimen>
    <dimen name="expand_tab_eara_height">380dp</dimen>
    <dimen name="head_bar_height">45dp</dimen>
    <!--动画-->
    <!--客户筛选动画-->
    <style name="anim_pop_up_show">
        <item name="android:windowEnterAnimation">@anim/abc_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/abc_popup_exit</item>
    </style>
    <!-- ========================== 通用样式 ============================ -->
    <!-- 顶部标题栏 -->
    <style name="topbar_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topBar_height</item>
        <item name="android:background">@color/topBar_bg</item>
    </style>
    <!-- 透明标题蓝 -->
    <style name="topbar_layout_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topBar_height</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--头部左边样式-->
    <!--标题ImageButton样式-->
    <style name="topbar_btn_left">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/topBar_left_padding</item>
        <item name="android:paddingRight">@dimen/topBar_left_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@null</item>
    </style>
    <!--标题TextView样式-->
    <style name="topbar_tv_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/topBar_left_padding</item>
        <item name="android:paddingRight">@dimen/topBar_left_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/cm_tv_size_subhead</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!--头部右边样式-->
    <!--标题ImageButton样式-->
    <style name="topbar_btn_right">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/topBar_left_padding</item>
        <item name="android:paddingRight">@dimen/topBar_left_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--标题TextView样式-->
    <style name="topbar_tv_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/topBar_left_padding</item>
        <item name="android:paddingRight">@dimen/topBar_left_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/cm_tv_size_subhead</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 中间题目样式-->
    <style name="topbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/topBar_title</item>
        <item name="android:textSize">@dimen/cm_tv_size_title</item>
        <item name="android:gravity">center</item>
    </style>


    <!--listview样式-->
    <style name="cm_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:dividerHeight">0.8dp</item>
        <item name="android:divider">@color/cm_line_horizontal</item>
    </style>
    <!-- 横线-->
    <style name="cm_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/cm_line_horizontal</item>
    </style>
    <!--竖线-->
    <style name="cm_line_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/cm_line_horizontal</item>
    </style>
    <!-- 选择按钮-->
    <style name="cm_check">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:button">@null</item>
    </style>
    <!--评分条样式-->
    <style name="rating_bar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@color/cm_white</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">13dp</item>
    </style>
</resources>