<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/photo_select_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/photo_select_btn_cancel"
        android:minHeight="48dp"
        android:text="@string/photo_select_cancel"
        android:textColor="@color/cm_white"
        android:textSize="@dimen/cm_tv_button_size" />

    <Button
        android:id="@+id/photo_select_btn_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/photo_select_btn_cancel"
        android:layout_marginBottom="32dp"
        android:background="@drawable/photo_select_btn_bg"
        android:minHeight="48dp"
        android:text="@string/photo_select_image"
        android:textColor="@color/cm_white"
        android:textSize="@dimen/cm_tv_button_size" />

    <Button
        android:id="@+id/photo_select_btn_take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/photo_select_btn_image"
        android:layout_marginBottom="16dp"
        android:background="@drawable/photo_select_btn_bg"
        android:minHeight="48dp"
        android:text="@string/photo_select_take"
        android:textColor="@color/cm_white"
        android:textSize="@dimen/cm_tv_button_size" />
</RelativeLayout>
