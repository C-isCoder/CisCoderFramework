<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="@android:color/white"
   android:orientation="vertical">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center_vertical">

      <com.baichang.android.widget.circleImageView.CircleImageView
         android:id="@+id/item_interaction_report_iv_avatar"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_marginTop="3dp"
         app:civ_border_overlay="true" />

      <TextView
         android:id="@+id/item_interaction_report_tv_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:layout_toRightOf="@id/item_interaction_report_iv_avatar"
         android:textColor="@color/cm_tv_black2"
         android:textSize="@dimen/cm_tv_size_body13"
         tools:text="最爱啃石头" />

      <TextView
         android:id="@+id/item_interaction_report_tv_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_alignLeft="@id/item_interaction_report_tv_name"
         android:layout_below="@id/item_interaction_report_tv_name"
         android:textColor="@color/cm_tv_black2"
         android:textSize="@dimen/cm_tv_size_body11"
         tools:text="一小时前" />

   </RelativeLayout>

   <TextView
      android:id="@+id/item_interaction_report_tv_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="45dp"
      android:paddingRight="10dp"
      android:autoLink="phone"
      android:lineSpacingExtra="4dp"
      android:textColor="@color/cm_tv_black1"
      android:textSize="@dimen/cm_tv_size_body13"
      tools:text="6到飞起" />

   <LinearLayout
      android:id="@+id/item_interaction_report_content_layout"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginTop="11dp"
      android:layout_marginLeft="45dp"
      android:background="@drawable/interaction_report_item_content_bg"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <ImageView
         android:id="@+id/item_interaction_report_iv_image"
         android:layout_width="60dp"
         android:layout_height="match_parent"
         android:scaleType="centerCrop" />

      <TextView
         android:id="@+id/item_interaction_report_tv_summary"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingTop="20dp"
         android:paddingBottom="20dp"
         android:paddingLeft="10dp"
         android:paddingRight="2dp"
         android:ellipsize="end"
         android:lineSpacingExtra="4dp"
         android:maxLines="1"
         android:textColor="@color/cm_tv_black2"
         android:textSize="@dimen/cm_tv_size_body12"
         tools:text="济南哒哒汽配：专业维修核潜艇，和点头翻新，保养，租赁，改装，抛光，喷漆，内饰，回收" />
   </LinearLayout>

   <TextView
      android:id="@+id/item_interaction_report_tv_me"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:paddingLeft="45dp"
      android:paddingRight="10dp"
      android:textColor="@color/cm_tv_black2"
      android:textSize="@dimen/cm_tv_size_body12"
      android:visibility="gone"
      tools:text="阿拉蕾：要上天啊!"
      tools:visibility="visible" />

   <View
      style="@style/cm_line_horizontal"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="45dp" />
</LinearLayout>
