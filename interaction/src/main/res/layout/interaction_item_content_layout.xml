<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:padding="10dp"
   android:background="@android:color/white"
   android:orientation="vertical">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.baichang.android.widget.circleImageView.CircleImageView
         android:id="@+id/item_interaction_content_iv_avatar"
         android:layout_width="30dp"
         android:layout_height="30dp"
         app:civ_border_overlay="true" />

      <TextView
         android:id="@+id/item_interaction_content_tv_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="8dp"
         android:layout_toRightOf="@id/item_interaction_content_iv_avatar"
         android:textColor="@color/cm_tv_black3"
         android:textSize="@dimen/cm_tv_size_body13"
         tools:text="阿拉蕾" />

      <TextView
         android:id="@+id/item_interaction_content_tv_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="6dp"
         android:layout_alignBottom="@id/item_interaction_content_iv_avatar"
         android:layout_alignLeft="@id/item_interaction_content_tv_name"
         android:textColor="@color/cm_tv_black2"
         android:textSize="@dimen/cm_tv_size_body11"
         tools:text="1个小时前" />

      <TextView
         android:id="@+id/item_interaction_content_tv_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:paddingLeft="16dp"
         android:paddingRight="0dp"
         android:textColor="@drawable/interaction_content_item_btn_bg"
         android:textSize="@dimen/cm_tv_size_body3"
         android:visibility="gone"
         tools:text="删除"
         tools:visibility="visible" />
   </RelativeLayout>

   <TextView
      android:id="@+id/item_interaction_content_tv_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:textColor="@color/cm_tv_black1"
      android:textSize="@dimen/cm_tv_size_body13"
      tools:text="老司机带你与太阳肩并肩" />

   <TextView
      android:id="@+id/item_interaction_content_tv_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:lineSpacingExtra="4dp"
      android:textColor="@color/cm_tv_black2"
      android:textSize="@dimen/cm_tv_size_body13"
      tools:text="长期极影各类进口车，免税车，中东霸道、路虎、卡宴、多种车型任你挑。" />

   <com.baichang.android.circle.widget.photocontents.PhotoContents
      android:id="@+id/item_interaction_content_photo_content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp" />

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:gravity="end|center_vertical"
      android:orientation="horizontal">

      <TextView
         android:id="@+id/item_interaction_content_tv_praise"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/interaction_ic_praise"
         android:drawablePadding="4dp"
         android:gravity="center_vertical"
         android:textColor="@color/cm_tv_black2"
         android:textSize="@dimen/cm_tv_size_body12"
         tools:text="386232" />

      <TextView
         android:id="@+id/item_interaction_content_tv_comment"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="16dp"
         android:drawableLeft="@drawable/interaction_ic_comment"
         android:drawablePadding="4dp"
         android:gravity="center_vertical"
         android:textColor="@color/cm_tv_black2"
         android:textSize="@dimen/cm_tv_size_body12"
         tools:text="3863232" />
   </LinearLayout>
</LinearLayout>
