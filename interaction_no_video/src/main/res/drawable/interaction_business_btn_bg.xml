<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_pressed="true">
      <shape>
         <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
         <stroke android:color="@color/interaction_button_press_color" android:width="1dp" />
         <corners android:radius="5dp" />
      </shape>
   </item>
   <item android:state_pressed="false">
      <shape>
         <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
         <stroke android:color="@color/interaction_text_font" android:width="1dp" />
         <corners android:radius="5dp" />
      </shape>
   </item>
</selector>