<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:layout_gravity="center"
   android:background="@drawable/interaction_reply_bg"
   tools:context="com.baichang.android.circle.dialog.InteractionReplyDialogFragment">

   <EditText
      android:id="@+id/interaction_reply_et_report"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:background="@drawable/interaction_reply_bg"
      android:hint="@string/tips_report"
      android:textCursorDrawable="@drawable/interaction_edit_cursor_color"
      android:textSize="@dimen/cm_tv_size_body12" />

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal">

      <TextView
         android:id="@+id/interaction_reply_tv_cancel"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:background="@drawable/interaction_detail_report_btn_bg"
         android:gravity="center"
         android:text="@string/btn_cancel"
         android:textColor="@color/cm_tv_black2"
         android:textSize="@dimen/cm_tv_size_body12" />

      <TextView
         android:id="@+id/interaction_reply_tv_send"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:background="@drawable/interaction_detail_report_btn_bg"
         android:gravity="center"
         android:text="@string/btn_send"
         android:textColor="@color/cm_tv_black2"
         android:textSize="@dimen/cm_tv_size_body12" />
   </LinearLayout>
</RelativeLayout>
